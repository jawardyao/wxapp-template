page {
  background-color: #f5f5f5;
}
.container-bg {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  background: linear-gradient(
    0deg,
    rgba(126, 225, 255, 1) 0%,
    rgba(52, 146, 255, 1) 100%
  );
}

.container {
  padding: 30rpx;
}

.statistics-box {
  border-radius: 20rpx;
  padding: 0 20rpx;
  background: #fff;
}

.top-box {
  display: flex;
  padding: 60rpx 0 40rpx;
  border-bottom: 1px solid #f5f5f5;
}

.top-box .top-item {
  width: 100%;
  flex-shrink: 1;
  text-align: center;
}

.top-item .item-data {
  color: #3a98ff;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 45rpx;
}

.top-item .item-title {
  color: #333;
  font-size: 24rpx;
}

.bottom-box {
  padding: 20rpx 40rpx;
}

.bottom-box .bottom-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bottom-item .item-title {
  color: #333;
  font-size: 24rpx;
}

.bottom-item .item-data {
  color: #3a98ff;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 45rpx;
}

/* 核销记录 */

.destroy-title {
  position: relative;
  padding: 30rpx 0;
  font-size: 32rpx;
  color: #3b3b3b;
  padding-left: 30rpx;
}
.destroy-title:before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 10rpx;
  height: 40rpx;
  background-color: #3796ff;
  border-radius: 10rpx;
}

.destroy-goods-container {
  margin-bottom: 30rpx;
  padding: 0 25rpx;
  background: #fff;
  border-radius: 20rpx;
}

.destroy-info {
  padding: 30rpx 0 20rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  border-bottom: 1px solid #f5f5f5;
}

.destroy-name-box {
  display: flex;
  width: 100%;
  flex-shrink: 1;
  margin-bottom: 10rpx;
}

.destroy-name-box .destroy-name {
  flex-shrink: 1;
  width: 100%;
  height: 80rpx;
  line-height: 40rpx;
  color: #333;
  font-size: 28rpx;
  padding-right: 40rpx;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.destroy-name-box .destroy-status {
  flex-shrink: 0;
  color: #fea82f;
  font-size: 24rpx;
}

.destroy-status-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.destroy-status-box .destroy-time {
  font-size: 24rpx;
  color: #afafaf;
}

.destroy-status-box .destroy-num {
  font-size: 28rpx;
  color: #333;
}

.destroy-code {
  padding: 20rpx 0;
  color: #333;
  font-size: 26rpx;
}

.loadmore {
  color: #888;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
}

.loadmore.loading::before {
  content: "";
  width: 40rpx;
  height: 40rpx;
  margin-top: -10rpx;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12) infinite;
  background: transparent
    url(data:image/svg+xml;base64,)
    no-repeat;
  background-size: 100%;
}

@keyframes loading {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(-360deg);
  }
}
