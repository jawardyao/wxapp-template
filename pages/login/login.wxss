.bg-wrap {
  display: block;
  width: 365rpx;
  height: 341rpx;
  margin: 50rpx auto;
}

.login-title {
  color: #333;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 50rpx;
}

.login-box {
  margin-bottom: 60rpx;
}

.login-box .login-item {
  display: flex;
  align-items: center;
  justify-content: start;
  padding: 0 30rpx;
  width: 560rpx;
  height: 90rpx;
  border-radius: 90rpx;
  margin: 0 auto;
  background-color: #f5f5f5;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.login-box .login-item:last-child {
  margin-bottom: 0;
}

.login-item .item-icon {
  display: block;
  width: 30rpx;
  height: 30rpx;
  margin-right: 14rpx;
}

.login-item .item-input {
  font-size: 28rpx;
  width: 100%;
  height: 90rpx;
}

.login-item .item-input::placeholder {
  color: #b3b3b3;
}

.login-btn {
  width: 560rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 90rpx;
  margin: 0 auto;
  font-size: 32rpx;
  color: #fff;
  background: linear-gradient(to right, #7ee1ff, #3492ff);
}